<div class="facebook_message">
  <div class="header">
    <div class="left_links">
      <%= image_tag "#{slugify(message.try_rescue(:notification_category)) || 'notification'}_icon.png", :class => "header_icon", :alt => "notification" %>
      <a href="<%= message.try_rescue(:url) %>" target="_top"><%= message.try_rescue(:subject) %></a>
      <div class="context_name">
        <span><%= cached_context_short_name(message.try_rescue(:context_code)) %></span>
      </div>
    </div>
    <div class="right_links">
      <%= datetime_string(message.try_rescue(:created_at)) || nbsp %>
      <div class="delete_holder"><a class="delete_link" rel="<%= facebook_hide_message_url(message.id) %>" href="#"><%= t :hide, "Hide" %></a></div>
    </div>
    <div style="clear: both;"></div>
  </div>
  <div class="body">
    <div><%= raw(message.try_rescue(:formatted_body) || nbsp) %></div>
    <div style="clear: both;"></div>
  </div>
</div>
