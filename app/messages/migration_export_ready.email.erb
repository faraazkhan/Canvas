<% define_content :link do %>
  http://<%= HostUrl.context_host(asset.context) %>/<%= asset.context.class.to_s.downcase.pluralize %>/<%= asset.context_id %>/imports/migrate/<%= asset.id %>  
<% end %>

<% define_content :subject do %>
  <%= t :subject, "Course Extraction Ready: %{course_name}", :course_name => asset.migration_settings[:course_name] %>
<% end %>

<%= t :body, "The extraction process for the course, %{course_name}, has completed. The content is now ready to be imported into your course.", :course_name => (asset.migration_settings[:course_name] || asset.context.name) %>

<%= t :link_message, "To finish importing content into %{course_name} you'll need to click the following link:", :course_name => asset.context.name %>
<%= content :link %>
