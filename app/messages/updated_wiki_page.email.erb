<% namespace = asset.find_namespace_for_user(user) %>
<% define_content :link do %>
  http://<%= HostUrl.context_host(namespace.context) %>/<%= namespace.context.class.to_s.downcase.pluralize %>/<%= namespace.context_id %>/wiki/<%= namespace.namespace + ":" if !namespace.default? %><%= asset.url %>
<% end %>

<% define_content :subject do %>
  <%= t :subject, "Updated Wiki Page: %{title}, %{user}", :title => asset.title.titleize, :user => (asset.find_namespace_for_user(user).context.name rescue "") %>
<% end %>

<%= t :body, "A page has been updated on the wiki for %{title} that may make your life easier.", :title => namespace.context.name %>

<%= asset.title.titleize %> 

<%= strip_and_truncate(asset.body, :max_length => 200) %> 


<%= t :link_message, "You can review it here: %{link}", :link => content(:link) %>

